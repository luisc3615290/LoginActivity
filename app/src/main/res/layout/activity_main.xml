<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/LoginActivityLayout"
        android:background="#D3D3D3">

    <ImageView
            android:id="@+id/pokeLogo"
            android:src="@drawable/pokelogo"
            android:layout_width="144dp"
            android:layout_height="139dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.092"
            app:layout_constraintHorizontal_bias="0.498"
            android:contentDescription="@string/Pokeball"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.26"
            android:hint="@string/usuario"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="408dp"
            app:layout_constraintTop_toBottomOf="@+id/pokeLogo"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:boxBackgroundColor="#FFFFFF">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.037"
            android:hint="@string/password"
            app:layout_constraintTop_toBottomOf="@+id/txtInputUsername"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:boxBackgroundColor="#FFFFFF">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="serif-monospace"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="@string/iniciarSesion"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:id="@+id/inicioSesion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toBottomOf="@+id/txtInputPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.048"
            android:backgroundTint="@color/pokeball"/>
    <Button
            android:text="@string/sesionFacebook"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:id="@+id/sesionFacebook"
            android:backgroundTint="@color/white"
            android:textColor="@color/pokeball"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/inicioSesion" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.032"/>
    <Button
            android:text="@string/sesionGoogle"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:id="@+id/sesionGoogle"
            android:backgroundTint="@color/white"
            android:textColor="@color/pokeball"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sesionFacebook" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.008" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/lineaDivisora1"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.411"
            app:layout_constraintVertical_bias="0.032"
            app:layout_constraintTop_toBottomOf="@+id/inicioSesion"/>
    <View
            android:id="@+id/lineaDivisora2"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.159"
            app:layout_constraintTop_toBottomOf="@id/sesionGoogle"/>
    <Button
            android:text="@string/reseteoPassword"
            android:layout_width="135dp"
            android:layout_height="65dp"
            android:id="@+id/paswordReset"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toEndOf="@+id/registro"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:backgroundTint="@color/pokeball" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/sesionGoogle"/>
    <Button
            android:text="@string/registro"
            android:layout_width="135dp"
            android:layout_height="65dp"
            android:id="@+id/registro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/paswordReset"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:backgroundTint="@color/pokeball" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/sesionGoogle"/>


</androidx.constraintlayout.widget.ConstraintLayout>